
@model Library_management.Models.Book

@{
    ViewData["Title"] = "Detail";
}
<h1>Detail</h1>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Borrow_count)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Borrow_count)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IS_borrow)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.IS_borrow)
            {
                <p class="text-danger ">ถูกยืม</p>
            }
            else
            {
                <p class="text-success">ว่าง</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="BookList">Back to List</a>
</div>
