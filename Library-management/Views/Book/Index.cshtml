@{
}
<h1 class="text-center">หนั้งสือทั้งหมด</h1>
<div class="container-md">
    <div class="row row-cols-4 container-md ">
            @foreach(var book in Model){
            <div class="row p-4">
                <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Description</p>
                        <a asp-route-id="@book?.Id"  asp-action="Detail" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            }
    </div>
</div>
